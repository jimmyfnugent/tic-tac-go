<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.tictacgo"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="11"/>
    <supports-screens android:smallScreens="true" android:anyDensity="true" android:largeScreens="true" android:resizeable="true" android:normalScreens="true" android:xlargeScreens="true"></supports-screens>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".TicTacGoMenu"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TicTacGoGame"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>

    </application>
</manifest>