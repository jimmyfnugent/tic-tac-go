<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameSelectScreen"
    android:layout_width="wrap_content" android:layout_height="fill_parent">
	<Button
		android:id="@+id/localButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:text="Local Match"/>
	<Button
		android:id="@+id/onlineButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:text="Online Match"/>
	<RelativeLayout
		android:id="@+id/localScreen"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true">
		<LinearLayout
			android:id="@+id/localScreenNames"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerVertical="true">
			<LinearLayout
				android:id="@+id/localScreenPlayerOne"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/localPlayerOnePiece"
					android:layout_height="50dip"
					android:background="@drawable/piecex"
					android:padding="2dip"
					android:layout_width="50dip"/>
				<EditText
					android:id="@+id/localPlayerOneName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="100"
					android:hint="Player 1"/>
				<EditText
					android:id="@+id/localComputerOneName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:visibility="gone"
					android:layout_weight="100"
					android:hint="CPU"/>
				<Button
					android:id="@+id/localPlayerOneButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Human"/>
				<Button
					android:id="@+id/localComputerOneButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="CPU"/>
				</LinearLayout>
			<LinearLayout
				android:id="@+id/localScreenPlayerTwo"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/localPlayerTwoPiece"
					android:layout_height="50dip"
					android:background="@drawable/pieceo"
					android:padding="2dip"
					android:layout_width="50dip"/>
				<EditText
					android:id="@+id/localPlayerTwoName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="100"
					android:hint="Player 2"/>
				<EditText
					android:id="@+id/localComputerTwoName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="100"
					android:visibility="gone"
					android:hint="CPU"/>
				<Button
					android:id="@+id/localPlayerTwoButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Human"/>
				<Button
					android:id="@+id/localComputerTwoButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="CPU"/>
			</LinearLayout>
			<RadioGroup 
				android:id="@+id/localTurnSelect" 
				android:orientation="horizontal" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal" 
				android:checkedButton="@+id/localTurnSelectX">
				<RadioButton 
					android:id="@id/localTurnSelectX"
					android:textColor="@color/blue" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:text="X" />
				<RadioButton 
					android:id="@+id/localTurnSelectO"
					android:textColor="@color/red" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:text="O" />
				<RadioButton 
					android:id="@+id/localTurnSelectRandom"
					android:textColor="@color/green" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:text="Random" ></RadioButton>
			</RadioGroup>
		</LinearLayout>
	</RelativeLayout>	
	<TextView
		android:id="@+id/onlineScreen"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="Not Gonna Happen"
		android:visibility="gone"/>
    <Button
		android:id="@+id/helpButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:text="Help"/>
	 <Button
		android:id="@+id/optionsButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:text="Options"/>  
	<Button
		android:id="@+id/playButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:text="Play!"/>
</RelativeLayout>
