<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameSelectScreen"
    android:layout_width="wrap_content" android:layout_height="fill_parent">
	<RelativeLayout
		android:id="@+id/localScreen"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true">
		<LinearLayout
			android:id="@+id/localScreenNames"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerVertical="true">
			<LinearLayout
				android:id="@+id/localScreenPlayerOne"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/localPlayerOnePiece"
					android:layout_height="50dip"
					android:background="@drawable/piece_x"
					android:padding="2dip"
					android:layout_width="50dip"/>
				<EditText
					android:id="@+id/localPlayerOneName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="100"
					android:hint="Player 1"/>
				</LinearLayout>
			<LinearLayout
				android:id="@+id/localScreenPlayerTwo"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/localPlayerTwoPiece"
					android:layout_height="50dip"
					android:background="@drawable/piece_o"
					android:padding="2dip"
					android:layout_width="50dip"/>
				<EditText
					android:id="@+id/localPlayerTwoName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="100"
					android:hint="Player 2"/>
			</LinearLayout>
			<RadioGroup 
				android:id="@+id/localTurnSelect" 
				android:orientation="horizontal" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal" 
				android:checkedButton="@+id/localTurnSelectX">
				<RadioButton 
					android:id="@id/localTurnSelectX"
					android:textColor="@color/blue" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:text="X" />
				<RadioButton 
					android:id="@+id/localTurnSelectO"
					android:textColor="@color/red" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:text="O" />
				<RadioButton 
					android:id="@+id/localTurnSelectRandom"
					android:textColor="@color/green" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:text="Random" ></RadioButton>
			</RadioGroup>
		</LinearLayout>
	</RelativeLayout>
	<Button
		android:id="@+id/playButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:text="Play!"/>
</RelativeLayout>
