<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="4dp"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/gameEndTitle"
            style="@style/playerNameText"
            android:text="@string/gameEndTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/gameEndTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameEndTitle"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gameEndPieceLeft"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:adjustViewBounds="true"/>

            <TextView
                android:text="@string/gameEndTie"
                android:id="@+id/gameEndText"
                style="@style/playerNameText"
                android:textSize="30sp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/gameEndPieceRight"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>